@using Resources

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – WebsiteMaker</title>
    @Styles.Render("~/Content/css")
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand logo" href="/">
                    <img src="http://res.cloudinary.com/website-maker/image/upload/c_scale,w_50/v1469827634/logo_chyujp.png" />
                </a>
            </div>

            <div class="navbar-collapse collapse">
                <div class="col-sm-3 col-md-3">
                    <form class="navbar-form" role="search">
                        <input type="text" class="form-control" placeholder=@Resource.Search>
                    </form>
                </div>

                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink(Resource.Home, "Index", "Home")</li>
                    <li><a href="#about">@Resource.Rating</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="#contact">@Resource.Profile</a></li>
                    }
                </ul>

                @Html.Partial("_LoginPartial")

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Resource.CurrentLanguage<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Рус", "ChangeLanguage", "Manage", new { language = "ru" }, null)</li>
                            <li>@Html.ActionLink("Eng", "ChangeLanguage", "Manage", new { language = "en" }, null)</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted">@DateTime.Now.Year – WebsiteMaker</p>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/checkFunction.js")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
