@using CourseProject.Models
@using CloudinaryDotNet
@using CourseProject.Environment

@model ProfileViewModel

@{
    ViewBag.Title = Model.User.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-2"><h2>@ViewBag.Title</h2></div> 
    @*<div class="col-sm-2"><span class="fa fa-plus-circle fa-2x"></span></div>*@
</div>

<div class="col-md-offset-2">
    @if (Model.User.Picture == null)
            {
        @CloudinaryInitializer.Cloudinary.Api.UrlImgUp.Transform(
                   new Transformation().Width(200).Height(200).Crop("fill")).BuildImageTag("default_avatar_ww0y7e");
            }
            else
            {
        @CloudinaryInitializer.Cloudinary.Api.UrlImgUp.Transform(
                   new Transformation().Width(200).Height(200).Crop("fill")).BuildImageTag(Model.User.Picture);
            }
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var site in Model.Sites)
{
    <div class="row">
        <div class="col-md-6">@site.Name</div>
    </div>
    <div class="row">
        <div class="col-md-6">@site.Rating</div>
    </div>
}

