@using Resources

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title – WebsiteMaker</title>
        @Styles.Render("~/Content/users-styles")
        @Styles.Render("~/Content/" + (string)ViewBag.Theme + ".css")
        <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
    </head>
    <body>
        @if ((bool)ViewBag.horizontalMenu)
        {
            Html.RenderPartial("_HorizontalMenu");
        }
        <div class="main container-fluid">
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                @if ((bool)ViewBag.verticalMenu)
                {
                    Html.RenderPartial("_VerticalMenu");
                }
            </div>
            <div class="container col-lg-8 col-md-8 col-sm-8 col-xs-9 test" >
                @Html.Partial('_'+(string)ViewBag.Template)
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <p class="text-muted">@DateTime.Now.Year – @Resource.Footer </p>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/modernizr")
    </body>
</html>
