@model CourseProject.Models.EditViewModel
@using Resources
@{
    ViewBag.Title = Resource.Edit;
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – WebsiteMaker</title>

    <link rel="stylesheet" href="~/Content/themes/base/all.css" />
    <link rel="stylesheet" href="~/Scripts/mediaelement/mediaelementplayer.css" />

    @Styles.Render("~/Content/users-styles")
    @Styles.Render("~/Content/" + Model.Theme as string + ".css")
</head>
<body>
    @*Html.HiddenFor(model => model.SiteUrl, new { Value = Model.SiteUrl })*@
    <div class="main container-fluid">
        <div class="menu">
            @if ((bool)ViewBag.horizontalMenu)
            {
                Html.RenderPartial("Menu/_HorizontalMenu");
            }
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                @if ((bool)ViewBag.verticalMenu)
                {
                    Html.RenderPartial("Menu/_VerticalMenu");
                }
            </div>
        </div>
        <div class="container content col-lg-8 col-md-8 col-sm-8 col-xs-9">
            @Html.Partial("Template/_" + ViewBag.Template as string)
        </div>
        <div class="container" id="toolbar">
            <button type="button" class="btn btn-danger delete">Delete</button>
            <button type="button" class="btn btn-success save">Save</button>

            <img id="toolPictrue" src="http://res.cloudinary.com/website-maker/image/upload/v1471300845/toolbar/s_picture.png" />
            <img id="toolVideo" src="http://res.cloudinary.com/website-maker/image/upload/v1471300845/toolbar/s_video.png" />
            <img id="toolText" src="http://res.cloudinary.com/website-maker/image/upload/v1471300845/toolbar/s_text.png" />

        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-muted">@DateTime.Now.Year – @Resource.Footer </p>
        </div>
    </footer>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

            </div>

        </div>
    </div>

    <script>
        var contentJSON = @Html.Raw(Model.ContentJson);
        var menuJSON = @Html.Raw(Model.MenuJson);
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/mediaelement/mediaelement-and-player.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.0.min.js"></script>
    <script src="~/Scripts/jquery.cropit.js"></script>
    @Scripts.Render("~/Scripts/fill-script.js")
    @Scripts.Render("~/Scripts/save-script.js")
    @Scripts.Render("~/Scripts/editing-script.js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

