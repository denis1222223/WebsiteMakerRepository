@using Resources
@using CourseProject.Models.Entities
@model CourseProject.Models.UserSitesViewModel


@{
    ViewBag.Title = Resource.Sites;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.IsAuthor)
{
    <h2>@Resource.AuthorSites</h2>
}
else
{
    <h2>@Resource.UserSites</h2>
}


@if (Model.IsAuthor)
{
    <p>
        @Html.ActionLink(Resource.CreateSite, "CreateSite")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName(@Resource.Name)
        </th>
        <th>
            @Html.DisplayName(@Resource.Rating)
        </th>
        <th>
            @Html.DisplayName("URL")
        </th>
        <th></th>
    </tr>
    @if (Model.Sites.Count > 0)
    {
        if (Model.IsAuthor)
        {
            Html.RenderPartial("SitesList/_Author", Model);
        }
        else
        {
            Html.RenderPartial("SitesList/_User", Model);
        }
    }
    else
    {
        Html.RenderPartial("SitesList/_NoSites", Model);
    }

